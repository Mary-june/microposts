<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
  </div>
  <%= form_for(@user) do |f| %>
  <%= image_tag @user.avatar.url if @user.avatar %>
  <%= f.label :avatar %>
  <%= f.file_field :avatar %>
  <% end %>
  
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>